@model contactmvc.Models.Contactdata

@{
    ViewData["Title"] = "create";
}
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Contact Form</title>

    <link href="~/css/contactstyle.css" rel="stylesheet" />
   

    <link rel="stylesheet" href="https://pro.fontawesome.com/releases/v5.10.0/css/all.css" integrity="sha384-AYmEC3Yw5cVb3ZcuHtOA93w35dYTsvhLPVnYs9eStHfGJvOvKxVfELGroGkvsg+p" crossorigin="anonymous" />

    <link href="https://fonts.googleapis.com/css2?family=Caveat&display=swap" rel="stylesheet">

</head>
<body>
    <div class="tcontainer">
    <div class="form">
            <div class="contact-info">
                <h3 class="title">Let's get in touch</h3>
                <p class="text">
                    If you have any queries kindly contact us!!!
                </p>

                <div class="info">
                    <div class="information">
                        <i class="fa fa-address-book-o" aria-hidden="true"></i>&nbsp;&nbsp;
                        <p>92 jdspat road, NY 11553</p>
                    </div>
                    <div class="information">
                        <i class="fa fa-envelope" aria-hidden="true"></i>&nbsp;&nbsp;
                        <p>jdspat@gmail.com</p>
                    </div>
                    <div class="information">
                        <i class="fa fa-phone-square" aria-hidden="true"></i>&nbsp;&nbsp;
                        <p>123-456-789</p>
                    </div>
                </div>

                <div class="social-media">
                    <p>Connect with us :</p>
                    <div class="social-icons">
                        <a href="#">
                            <i class="fab fa-facebook-f"></i>
                        </a>
                        <a href="#">
                            <i class="fab fa-twitter"></i>
                        </a>
                        <a href="#">
                            <i class="fab fa-instagram"></i>
                        </a>
                        <a href="#">
                            <i class="fab fa-linkedin-in"></i>
                        </a>
                    </div>
                </div>
            </div>

            <div class="contact-form">


                <form asp-action="create" autocomplete="off">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <h3 class="title">Contact us</h3>
                    <div class="input-container">
                        <input type="text" asp-for="Name" class="input" placeholder="username" />
                        <span>name</span>
                        <span asp-validation-for="Name" style="color:white"></span>
                    </div>
                    <div class="input-container">
                        <input type="email" asp-for="Emailid" class="input" placeholder="email" />
                        <span asp-validation-for="Emailid" style="color:white"></span>
                        <span>Email</span>
                    </div>
                    @*<div class="input-container">
                            <input type="text" name="phone" class="input" placeholder="phone no" />

                            <span>Phone</span>
                        </div>*@
                    <div class="input-container textarea">
                        <textarea asp-for="Message" class="input" placeholder="message"></textarea>
                        <span asp-validation-for="Message" style="color:white"></span>
                        <span>Message</span>
                    </div>
                    <input type="submit" value="Send" class="btn" />
                </form>
            </div>
        </div>
    </div>

    <script src="app.js"></script>
</body>
</html>

