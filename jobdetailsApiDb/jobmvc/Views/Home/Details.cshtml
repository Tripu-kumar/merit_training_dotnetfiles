@model jobmvc.Models.jobdata

@{
    ViewData["Title"] = "Details";
}
<!DOCTYPE html>
<html lang="en" dir="ltr">
<head>
    <meta charset="utf-8">
    <!-- <meta name="viewport" content="width=device-width, initial-scale=1.0"> -->
    <title>Admin Dashboard</title>

    <link href="~/css/dashboard.css" rel="stylesheet" />
    <link href="~/css/detailsinfo.css" rel="stylesheet" />

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.12.1/css/all.min.css">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.5.1/jquery.min.js" charset="utf-8"></script>


    <!-- <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous"> -->


</head>
<body>
    <input type="checkbox" id="check">
    <!--header area start-->
    <header>
        <label for="check">
            <i class="fas fa-bars" id="sidebar_btn"></i>
        </label>
        <div class="left_area">
            <img src="~/lib/images/JDSPAT.png" class="profile_image" />
        </div>
        <div class="right_area">
            <a href="logout.php" class="logout_btn">Logout</a>
        </div>
    </header>
    <!--header area end-->
    <!--mobile navigation bar start-->
    <div class="mobile_nav">
        <div class="nav_bar">
            <img src="~/lib/images/JDSPAT.png" class="mobile_profile_image" />
            <i class="fa fa-bars nav_btn"></i>
        </div>
        <div class="mobile_nav_items">
            <a asp-area="" asp-controller="Home" asp-action="dashboard"><i class="fas fa-palette"></i><span>Dashboard</span></a>
            <a asp-area="" asp-controller="Home" asp-action="newjob"><i class="fas fa-plus-square"></i><span> New Job</span></a>
            <a asp-area="" asp-controller="Home" asp-action="joblist"><i class="far fa-file-alt"></i><span>Job List</span></a>
            <a asp-area="" asp-controller="Home" asp-action="viewdetails"><i class="fas fa-file-upload"></i><span>View Resume</span></a>
        </div>
    </div>
    <!--mobile navigation bar end-->
    <!--sidebar start-->
    <div class="sidebar">
        <div class="profile_info">

            <h4>Welcome</h4>
        </div>
        <a asp-area="" asp-controller="Home" asp-action="Index"><i class="fas fa-palette"></i><span>Dashboard</span></a>
        <a asp-area="" asp-controller="Home" asp-action="create"><i class="fas fa-plus-square"></i><span>New Job</span></a>
        <a asp-area="" asp-controller="Home" asp-action="JobList"><i class="far fa-file-alt"></i><span>Job List</span></a>
        <a asp-area="" asp-controller="Home" asp-action="viewdetails"><i class="fas fa-file-upload"></i><span>View Resume</span></a>
    </div>
    <div class="container">
        <div class="contact-box">
            <div class="left">
                <img src="https://image.freepik.com/free-vector/person-taking-online-interview_23-2148632122.jpg" style="width:300px;height:400px;margin-top:50px;" />
                <div class="buttons">
                    @Html.ActionLink("Edit", "Edit", new { id = Model.JobDetailsId }, new { @class = "LinkButton1" })
                    <a class="LinkButton" asp-action="JobList">Back to List</a>
                </div>
            </div>
            <div class="right">
                <h2>Job Details</h2>
                <table cellpadding="10" cellspacing="10">

                    <tr>
                        <th>JOB ID:</th>
                        <td> @Html.DisplayFor(model => model.JobDetailsId)</td>
                    </tr>
                    <tr>
                        <th>Company Name:</th>
                        <td>@Html.DisplayFor(model => model.Companyname)</td>
                    </tr>
                    <tr><th>Job Title :</th><td> @Html.DisplayFor(model => model.JobCategory)</td></tr>
                    <tr><th>Job Type :</th><td>@Html.DisplayFor(model => model.JobType)</td></tr>
                    <tr><th>Required Skills :</th><td> @Html.DisplayFor(model => model.Requiredskills)</td></tr>
                    <tr><th>Experience:</th><td>@Html.DisplayFor(model => model.Experience)</td></tr>
                    <tr><th>No Of Vacanices:</th><td>@Html.DisplayFor(model => model.NoOfVacancies)</td></tr>
                    <tr><th>Salary :</th><td>@Html.DisplayFor(model => model.Salary)</td></tr>
                    <tr><th>End Date:</th><td>@Html.DisplayFor(model => model.EndDate)</td></tr>
                    <tr><th>Email :</th><td>@Html.DisplayFor(model => model.Email)</td></tr>
                    <tr><th>Job Location :</th><td>@Html.DisplayFor(model => model.JobLocation)</td></tr>
                    <tr><th>Phone_no : </th><td>@Html.DisplayFor(model => model.PhNo)</td></tr>
                    <tr><th>Address :</th> <td>@Html.DisplayFor(model => model.CompanyAddress)</td></tr>
                    <tr>
                        <th>Job Description:</th>
                        <td>@Html.DisplayFor(model => model.JobDescription)</td>
                    </tr>



                </table>
            </div>
        </div>
    </div>

    <script src="app.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            $('.nav_btn').click(function () {
                $('.mobile_nav_items').toggleClass('active');
            });
        });
    </script>

</body>
</html>


