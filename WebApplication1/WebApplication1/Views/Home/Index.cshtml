
@model IEnumerable<Employee>

<html>
<head>
</head>
<body>

     <h2 style="text-align:center">@ViewBag.PageTitle</h2>
     <div style="display:flex; margin-top:100px;justify-content:center">
         <table border="1" cellpadding="10">
             <thead>
                 <tr>
                     <th>ID</th>
                     <th>NAME</th>
                     @*<th>EMAIL</th>
                    <th>Department</th>*@
                     <th>DETAILS PAGE</th>
                 </tr>
             </thead>
             <tbody>
                 @foreach (var employee in Model)
                 {
                     <tr>
                         <td>
                             @employee.id
                         </td>
                         <td>
                             @employee.Name
                         </td>
                         @*<td>
                            @employee.Email
                        </td>
                        <td>
                            @employee.Department
                        </td>*@
                         <td>
                             <a href="/home/details/@employee.id">Details</a>

                         </td>

                     </tr>
                 }
             </tbody>

         </table>
     </div>
</body>
</html>
