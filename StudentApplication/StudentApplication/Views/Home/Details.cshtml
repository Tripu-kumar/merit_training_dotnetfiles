@model StudentApplication.Models.Student;

@{
    ViewBag.Title = "PROFILE PAGE";
    Layout = "~/Views/shared/_Layout.cshtml";

}
<div class="row justify-content-center m-3">
    <div class="col-sm-8">
        <div class="card">
            <div class="card-header text-center">
                <h1>@Model.name</h1>

            </div>
            <div class="card-body text-center">

                <h4><img src="~/lib/Images/femaleprofile.jpg" height="200" width="200"/></h4>
                <h4>Student ID: @Model.stuid</h4>
                <h4>Student Name: @Model.name</h4>
                <h4>Student Branch: @Model.branch</h4>
                <h4>Student Section: @Model.section</h4>
                <h4>Student Gender: @Model.gender</h4>

            </div>
            <div class="card-footer text-center">
                <a asp-controller="home" asp-action="index" class="btn btn-success">Back</a>
                <a href="#" class="btn btn-danger">Delete</a>
            </div>


        </div>
    </div>
</div>