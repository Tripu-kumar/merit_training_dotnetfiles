@model StudentApplication.Models.Student
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<form asp-controller="Home" asp-action="Create" method="post" class="mt-3">
    <div class="form-group row">
        <label asp-for="name" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="name" class="form-control" placeholder="Name">
            <span asp-validation-for="name" class="text-danger"></span>
        </div>

    </div>
    <div class="form-group row">
        <label asp-for="section" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="section" class="form-control" placeholder="section">
            <span asp-validation-for="section" class="text-danger"></span>
        </div>

    </div>
    <div class="form-group row">
        <label asp-for="branch" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <select asp-for="branch" class="custom-select mr-sm-2"
                    asp-items="Html.GetEnumSelectList<Branch>()"></select>
            <span asp-validation-for="branch" class="text-danger"></span>
        </div>

    </div>
    <div class="form-group row">
        <label asp-for="gender" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            @foreach (var gender in Model.AllGenders)
            {
            <label class="radio-inline">
                <input type="radio" asp-for="gender" value="@gender" id="Gender@(gender)" />@gender<br />
                <span asp-validation-for="gender" class="text-danger"></span>
            </label>
            }
        </div>

    </div>

    <div class="form-group row">
        <div class="col-sm-10">
            <button type="submit" class="btn btn-primary">Create</button>
        </div>
    </div>
</form>
